<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @product.product_image.url, class:"img-responsive"%>

      <%= render 'products/order_item_form' %>

  </div>

  <div class="col-md-8">
    <div class="row">


    <h1 class="text-center"><%= @product.name %><br/><small><%= @product.price %>$ </small></h1>
    <div class="row">
      <div class="col-md-4 col-md-offset-5">

      </div>
    </div>
    <div class="row">
      <div class="col-md-7">
        <h1 class="text-center">Description</h1>
        <p><%= @product.description %></p>
      </div>
      <div class="row">
        <div class="col-md-5">
          <h1 class="text-center"> Product info </h1>
          <p>
            <strong>Name:</strong>
            <%= @product.name %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= @product.price %>
          </p>
          <p>
          <p>
            <strong>Manufacturer:</strong>
            <%= @product.manufacturer %>
          </p>

          <p>
            <strong>Category:</strong>
            <%= @product.category %>
          </p>

          <p>
            <strong>Units in stock:</strong>
            <%= @product.units_in_stock %>
        </div>
      </div>
    </div>

  </div>
</div>
<%= button_to 'Back', products_path, class:"btn-primary", :method => "get"%>
<%= button_to 'Edit', edit_product_path(@product), class:"btn-success", :method => "get"%>
